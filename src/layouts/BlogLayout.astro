---
interface Props {
  title: string;
  description?: string;
  date?: string;
  readingTime?: string;
}

const { 
  title, 
  description = "Article par Charly Aubert", 
  date = "",
  readingTime = "5 min"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <title>{title} - Charly Aubert</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    
    <!-- Open Graph -->
    <meta property="og:title" content={`${title} - Charly Aubert`}>
    <meta property="og:description" content={description}>
    <meta property="og:type" content="article">
</head>
<body>
    <!-- Navigation -->
    <nav class="blog-nav">
        <div class="blog-nav-container">
            <a href="/" class="blog-nav-back">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="19" y1="12" x2="5" y2="12"></line>
                    <polyline points="12 19 5 12 12 5"></polyline>
                </svg>
                Retour
            </a>
            <a href="/" class="blog-nav-brand">Charly Aubert</a>
        </div>
    </nav>

    <!-- Article -->
    <article class="blog-article">
        <header class="blog-header">
            <h1 class="blog-title">{title}</h1>
            {date && (
                <div class="blog-meta">
                    <span class="blog-date">{date}</span>
                    <span class="blog-separator">â€¢</span>
                    <span class="blog-reading-time">{readingTime} de lecture</span>
                </div>
            )}
        </header>
        
        <div class="blog-content">
            <slot />
        </div>
    </article>

    <!-- Footer -->
    <footer class="blog-footer">
        <div class="blog-footer-container">
            <p>Charly Aubert - Creer une vie alignee</p>
            <a href="/" class="btn btn-secondary">Retour a l'accueil</a>
        </div>
    </footer>
</body>
</html>

<style is:global>
    @import '../styles/global.css';
</style>
