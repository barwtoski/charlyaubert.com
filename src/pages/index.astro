---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Charly Aubert">

  <!-- ============================================
       HERO
       ============================================ -->
  <div class="hero-wrapper">
    <section class="hero-card">
      <div class="hero-grid">
        <div class="hero-image">
          <img src="/images/charly-portrait.jpg" alt="Charly Aubert" />
        </div>
        <div class="hero-text">
          <h1>Charly Aubert</h1>
          <p class="hero-intro">
            Je construis le plus grand batiment en paille porteuse du monde.
          </p>
          <p class="hero-desc">
            J'utilise l'IA pour me reconnecter a ce qui ne change jamais.
          </p>
          <p class="hero-signature">// les pieds sur terre, la tete dans les etoiles.</p>
          <div class="hero-links">
            <a href="https://www.youtube.com/@charlyaubert" target="_blank" rel="noopener" aria-label="YouTube">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
            </a>
            <a href="https://www.instagram.com/laom.coliving/" target="_blank" rel="noopener" aria-label="Instagram">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 1 0 0 12.324 6.162 6.162 0 0 0 0-12.324zM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm6.406-11.845a1.44 1.44 0 1 0 0 2.881 1.44 1.44 0 0 0 0-2.881z"/></svg>
            </a>
            <a href="https://www.linkedin.com/in/charlyaubert/" target="_blank" rel="noopener" aria-label="LinkedIn">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            </a>
            <a href="mailto:charly@laom.fr" aria-label="Email">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/></svg>
            </a>
          </div>
        </div>
      </div>
      <!-- Newsletter integree -->
      <div class="hero-newsletter">
        <form action="https://app.kit.com/forms/8987350/subscriptions" method="post" class="hero-nl-form seva-form formkit-form" data-sv-form="8987350" data-uid="af2e0fc1e5" data-format="inline" data-version="5">
          <input name="email_address" type="email" required placeholder="email@exemple.com" />
          <button type="submit">s'inscrire</button>
        </form>
        <p class="hero-nl-hint">Coulisses, reflexions, decisions cles. Pas de spam.</p>
      </div>
    </section>
  </div>

  <!-- ============================================
       CE QUE J'ECRIS — liste terminal
       ============================================ -->
  <section class="section">
    <div class="container">
      <span class="badge">~/articles</span>
      <h2 class="section-title">Ce que j'ecris</h2>
      <ul class="article-list">
        <li>
          <a href="/blog/piloter-sa-vie-avec-une-ia">
            <span class="article-prefix">$</span>
            <span class="article-title">Comment je pilote un ecolieu de 21 hectares avec une IA</span>
            <span class="article-arrow">-&gt;</span>
          </a>
        </li>
        <li>
          <a href="/blog/grand-shambala">
            <span class="article-prefix">$</span>
            <span class="article-title">Grand Shambala — le plus grand batiment en paille porteuse au monde</span>
            <span class="article-arrow">-&gt;</span>
          </a>
        </li>
        <li>
          <a href="/blog/petit-shambala">
            <span class="article-prefix">$</span>
            <span class="article-title">Petit Shambala — le batiment qu'on n'avait jamais prevu de construire</span>
            <span class="article-arrow">-&gt;</span>
          </a>
        </li>
        <li>
          <a href="/blog/salle-de-pratique">
            <span class="article-prefix">$</span>
            <span class="article-title">Comment 20 benevoles ont construit le Shala en un ete</span>
            <span class="article-arrow">-&gt;</span>
          </a>
        </li>
      </ul>
    </div>
  </section>

  <!-- ============================================
       CE QUE JE PROPOSE
       ============================================ -->
  <section class="section">
    <div class="container">
      <span class="badge">~/offres</span>
      <h2 class="section-title">Ce que je propose</h2>
      <div class="offers-grid">
        <div class="offer">
          <h3>Clarte</h3>
          <p>Un weekend immersif a LAOM pour retrouver ta boussole interieure. Ancrage, silence, clarte.</p>
          <a href="https://laom.fr/clarte/" target="_blank" rel="noopener" class="offer-link">decouvrir -&gt;</a>
        </div>
        <div class="offer">
          <h3>Mentorat</h3>
          <p>Accompagnement individuel pour entrepreneurs qui veulent construire depuis l'alignement, pas depuis la peur.</p>
          <a href="https://laom.fr/mentorat/" target="_blank" rel="noopener" class="offer-link">en savoir plus -&gt;</a>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       LAOM
       ============================================ -->
  <section class="section">
    <div class="container">
      <div class="laom-card">
        <div class="laom-image">
          <img src="/images/laom-vue-ensemble.jpg" alt="LAOM — ecolieu dans le sud de l'Aveyron" />
        </div>
        <div class="laom-content">
          <h2>LAOM</h2>
          <p>21 hectares de foret, riviere et prairie dans le sud de l'Aveyron. Un ecolieu ou la conscience rencontre le reel — un mur en paille a la fois.</p>
          <a href="https://laom.fr" target="_blank" rel="noopener" class="laom-link">decouvrir laom.fr -&gt;</a>
        </div>
      </div>
    </div>
  </section>

  <!-- ============================================
       FOOTER
       ============================================ -->
  <footer class="footer">
    <div class="footer-inner">
      <p class="footer-name">Charly Aubert</p>
      <p class="footer-tagline">// les pieds sur terre, la tete dans les etoiles.</p>
      <div class="footer-links">
        <a href="https://www.youtube.com/@charlyaubert" target="_blank" rel="noopener">YouTube</a>
        <a href="https://www.instagram.com/laom.coliving/" target="_blank" rel="noopener">Instagram</a>
        <a href="https://www.linkedin.com/in/charlyaubert/" target="_blank" rel="noopener">LinkedIn</a>
        <a href="mailto:charly@laom.fr">Email</a>
      </div>
      <p class="footer-copy">&copy; 2026 Charly Aubert</p>
    </div>
  </footer>

</Layout>

<style>
/* ========================================
   HERO
   ======================================== */
.hero-wrapper {
  padding: var(--space-md) var(--space-md) 0;
}

.hero-card {
  background: var(--color-bg-surface);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-lg);
  padding: 2.5rem 3rem;
  max-width: var(--max-width);
  margin: 0 auto;
}

.hero-grid {
  display: grid;
  grid-template-columns: auto 1fr;
  gap: 2.5rem;
  align-items: center;
}

.hero-image {
  flex-shrink: 0;
}

.hero-image img {
  width: 220px;
  height: 220px;
  border-radius: var(--radius-md);
  object-fit: cover;
  filter: brightness(0.9) saturate(0.85);
  border: 1px solid var(--color-border);
}

.hero-text {
  display: flex;
  flex-direction: column;
  gap: 0.4rem;
}

h1 {
  font-family: var(--font-mono);
  font-size: clamp(2rem, 4.5vw, 3rem);
  font-weight: 700;
  line-height: 1.15;
  color: var(--color-text);
  letter-spacing: -0.02em;
}

.hero-intro {
  font-size: 1.1rem;
  line-height: 1.6;
  color: var(--color-text-sub);
}

.hero-desc {
  font-size: 1rem;
  line-height: 1.6;
  color: var(--color-text-muted);
}

.hero-signature {
  font-family: var(--font-mono);
  color: var(--color-green);
  font-size: 0.9rem;
  margin-top: 0.5rem;
  opacity: 0.8;
}

.hero-links {
  display: flex;
  gap: var(--space-sm);
  margin-top: var(--space-sm);
}

.hero-links a {
  color: var(--color-text-muted);
  transition: color 0.2s ease;
}

.hero-links a:hover {
  color: var(--color-green);
}

/* ========================================
   SECTIONS
   ======================================== */
.section {
  padding: var(--space-xl) var(--space-md);
}

.container {
  max-width: var(--max-width);
  margin: 0 auto;
}

.badge {
  display: inline-block;
  font-family: var(--font-mono);
  font-size: 0.75rem;
  font-weight: 500;
  color: var(--color-orange);
  margin-bottom: 0.75rem;
  letter-spacing: 0.02em;
}

.section-title {
  font-family: var(--font-mono);
  font-size: clamp(1.5rem, 3vw, 2rem);
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: var(--space-lg);
  line-height: 1.25;
  letter-spacing: -0.02em;
}

/* ========================================
   ARTICLES — liste terminal
   ======================================== */
.article-list {
  list-style: none;
}

.article-list li {
  border-bottom: 1px solid var(--color-border);
}

.article-list li:first-child {
  border-top: 1px solid var(--color-border);
}

.article-list a {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem 0.5rem;
  color: var(--color-text-sub);
  text-decoration: none;
  transition: color 0.2s ease, background-color 0.2s ease;
  border-radius: var(--radius-sm);
  margin: 0 -0.5rem;
  padding-left: 0.5rem;
  padding-right: 0.5rem;
}

.article-list a:hover {
  color: var(--color-text);
  background-color: var(--color-green-dim);
}

.article-prefix {
  font-family: var(--font-mono);
  font-size: 0.85rem;
  color: var(--color-green);
  flex-shrink: 0;
  opacity: 0.7;
}

.article-list a:hover .article-prefix {
  opacity: 1;
}

.article-title {
  font-size: 1rem;
  line-height: 1.5;
  flex: 1;
}

.article-arrow {
  font-family: var(--font-mono);
  font-size: 0.85rem;
  color: var(--color-green);
  flex-shrink: 0;
  opacity: 0;
  transition: opacity 0.2s ease, transform 0.2s ease;
}

.article-list a:hover .article-arrow {
  opacity: 1;
  transform: translateX(4px);
}

/* ========================================
   OFFRES
   ======================================== */
.offers-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.25rem;
}

.offer {
  background: var(--color-bg-surface);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-md);
  padding: 2rem;
  transition: border-color 0.2s ease;
}

.offer:hover {
  border-color: var(--color-border-hover);
}

.offer h3 {
  font-family: var(--font-mono);
  font-size: 1.2rem;
  font-weight: 700;
  color: var(--color-mauve);
  margin-bottom: 0.75rem;
}

.offer p {
  font-size: 0.95rem;
  color: var(--color-text-sub);
  line-height: 1.7;
  margin-bottom: var(--space-sm);
}

.offer-link {
  font-family: var(--font-mono);
  font-size: 0.85rem;
  font-weight: 500;
  color: var(--color-green);
  transition: color 0.2s ease;
}

.offer-link:hover {
  color: var(--color-blue);
}

/* ========================================
   LAOM
   ======================================== */
.laom-card {
  background: var(--color-bg-surface);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-lg);
  overflow: hidden;
}

.laom-image {
  width: 100%;
  height: 340px;
  overflow: hidden;
}

.laom-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: brightness(0.85) saturate(0.9);
}

.laom-content {
  padding: 2rem 2.5rem;
}

.laom-content h2 {
  font-family: var(--font-mono);
  font-size: 1.75rem;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 0.75rem;
  letter-spacing: -0.02em;
}

.laom-content p {
  font-size: 1rem;
  color: var(--color-text-sub);
  line-height: 1.7;
  margin-bottom: var(--space-sm);
}

.laom-link {
  font-family: var(--font-mono);
  font-size: 0.85rem;
  font-weight: 500;
  color: var(--color-green);
  transition: color 0.2s ease;
}

.laom-link:hover {
  color: var(--color-blue);
}

/* ========================================
   HERO NEWSLETTER (integree dans la hero card)
   ======================================== */
.hero-newsletter {
  border-top: 1px solid var(--color-border);
  margin-top: 2rem;
  padding-top: 1.5rem;
}

.hero-nl-form {
  display: flex;
  gap: 0.75rem;
  max-width: 420px;
}

.hero-nl-form input {
  flex: 1;
  padding: 0.7rem 1rem;
  background: var(--color-bg);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-sm);
  font-size: 0.85rem;
  font-family: var(--font-mono);
  color: var(--color-text);
  transition: border-color 0.2s ease;
}

.hero-nl-form input:focus {
  outline: none;
  border-color: var(--color-green);
}

.hero-nl-form input::placeholder {
  color: var(--color-text-muted);
}

.hero-nl-form button {
  font-family: var(--font-mono);
  background: var(--color-green);
  color: var(--color-bg);
  padding: 0.7rem 1.25rem;
  border-radius: var(--radius-sm);
  font-weight: 700;
  font-size: 0.8rem;
  border: none;
  cursor: pointer;
  white-space: nowrap;
  transition: opacity 0.2s ease;
}

.hero-nl-form button:hover {
  opacity: 0.85;
}

.hero-nl-hint {
  font-size: 0.8rem;
  color: var(--color-text-muted);
  margin-top: 0.5rem;
}

/* ========================================
   FOOTER
   ======================================== */
.footer {
  border-top: 1px solid var(--color-border);
  padding: var(--space-lg) var(--space-md);
  text-align: center;
}

.footer-inner {
  max-width: var(--max-width);
  margin: 0 auto;
}

.footer-name {
  font-family: var(--font-mono);
  font-size: 1.1rem;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 0.25rem;
}

.footer-tagline {
  font-family: var(--font-mono);
  font-size: 0.8rem;
  color: var(--color-green);
  opacity: 0.6;
  margin-bottom: 1.5rem;
}

.footer-links {
  display: flex;
  justify-content: center;
  gap: 2rem;
  margin-bottom: 1.5rem;
}

.footer-links a {
  color: var(--color-text-muted);
  font-size: 0.875rem;
  transition: color 0.2s ease;
}

.footer-links a:hover {
  color: var(--color-green);
}

.footer-copy {
  font-family: var(--font-mono);
  font-size: 0.75rem;
  color: var(--color-text-muted);
  opacity: 0.5;
}

/* ========================================
   RESPONSIVE
   ======================================== */
@media (max-width: 768px) {
  .hero-wrapper {
    padding: var(--space-sm);
  }

  .hero-card {
    padding: 2rem 1.5rem;
  }

  .hero-grid {
    grid-template-columns: 1fr;
    text-align: center;
    gap: 1.5rem;
  }

  .hero-image {
    display: flex;
    justify-content: center;
  }

  .hero-image img {
    width: 180px;
    height: 180px;
  }

  .hero-text {
    align-items: center;
  }

  .hero-links {
    justify-content: center;
  }

  .offers-grid {
    grid-template-columns: 1fr;
  }

  .hero-nl-form {
    flex-direction: column;
    max-width: 100%;
  }

  .hero-newsletter {
    text-align: center;
  }

  .laom-image {
    height: 220px;
  }

  .laom-content {
    padding: 1.5rem;
  }
}

@media (max-width: 480px) {
  .hero-card {
    padding: 1.5rem 1.25rem;
  }

  .hero-image img {
    width: 150px;
    height: 150px;
  }

  .section {
    padding: var(--space-lg) var(--space-sm);
  }

  .offer {
    padding: 1.5rem;
  }

  .laom-image {
    height: 180px;
  }

  .laom-content {
    padding: 1.25rem;
  }
}
</style>
