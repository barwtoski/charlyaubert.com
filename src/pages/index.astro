                            action="https://app.kit.com/forms/8987350/subscriptions" 
                            class="hero-newsletter-form seva-form formkit-form" 
                            method="post" 
                            data-sv-form="8987350" 
                            data-uid="af2e0fc1e5" 
                            data-format="inline" 
                            data-version="5"
                        >
                            <input 
                                name="email_address" 
                                type="email" 
                                required 
                                placeholder="Ton email"
                                autocomplete="email"
                            />
                            <button type="submit" class="btn btn-primary">S'inscrire</button>
                        </form>
                        <p class="hero-newsletter-note">Pas de spam. Desabonnement en un clic.</p>
                    </div>
